<%= render partial: 'admin/shared/navtab' %>
  <% if current_user.superman? %>
    <h1><%= link_to '新增廠商', new_admin_vendor_path, class: "btn btn-default btn-light" %> </h1>
  <% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>名稱</th>
    </tr>
  </thead>
  <tbody>
    <% @vendors.each do |vendor| %>
    <tr>
      <td><%= vendor.name %></td>
      <td>
        <%= link_to '編輯', edit_admin_vendor_path(vendor), class: "btn btn-xs btn-default" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>