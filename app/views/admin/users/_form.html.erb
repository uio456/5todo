 <div class="col-md-6">
  <%= form_for  [:admin, user] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "姓名", class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.text_field :email, placeholder: "Email", class: "form-control"%>
    </div>
    <% if current_user.superman? %>
      <% if user.new_record? %>
        <div class="form-group">
          <%= f.text_field :password, placeholder: "密碼", class: "form-control"%>
        </div>
      <% end %>  
      <div class="form-group">
        <%= f.select(:role, options_for_select(User::ROLE, user.role), {}, { :class => 'form-control'}) %>
      </div>
    <% end %>  
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>