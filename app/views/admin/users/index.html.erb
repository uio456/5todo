<%= render partial: 'admin/shared/navtab' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>姓名</th>
      <th></th>
      <th>權限</th>
      <th>權限變更</th>
      <th>編輯</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.name %>
      </td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= form_tag admin_user_path(user), method: :patch, class: "form-inline" do %>
          <%= select_tag :role, options_for_select(User::ROLE, user.role), class: "form-control" %>
          <%= submit_tag "變更權限", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%= link_to '編輯', edit_admin_user_path(user), class: "btn btn-xs btn-default" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>