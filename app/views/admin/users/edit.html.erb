<%= render partial: 'admin/shared/navtab' %>
<div class="container">
  <div class="row col-md-offset-4">
  <h1><%= "編輯 #{which_vendor(@user.vendor_id)} 使用者"%></h1>
    <br>
      <div class="col-md-6">
        <%= form_for  [:admin, @user],url: admin_user_path(@user), method: :patch do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "姓名", class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.text_field :email, placeholder: "Email", class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.select(:role, options_for_select(which_role(@user), @user.role), {}, { :class => 'form-control'}) %>
          </div>
          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
