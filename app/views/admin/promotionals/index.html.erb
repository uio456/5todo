<%= render partial: 'admin/shared/navtab' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>特定商品滿幾件打折</th>
      <th>特定商家商品滿幾件打折</th>
      <th>Cart Item Discount</th>
      <th>總額滿多少打折</th>
      <th>Cart Discount</th>
      <th>ForFree</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= form_tag admin_promotional_path(@promotional), method: :patch, class: "form-inline" do %>
          <%= text_field_tag :item_p, @promotional.item_p, class: "form-control" %>
          <%= submit_tag "變更數量", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%= form_tag admin_promotional_path(@promotional), method: :patch, class: "form-inline" do %>
          <%= text_field_tag :vendor_p, @promotional.vendor_p, class: "form-control" %>
          <%= submit_tag "變更數量", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%= form_tag admin_promotional_path(@promotional), method: :patch, class: "form-inline" do %>
          <%= select_tag :cart_item_discount, options_for_select(Promotional::DISCOUNT, @promotional.cart_item_discount), class: "form-control" %>
          <%= submit_tag "變更折扣", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%= form_tag admin_promotional_path(@promotional), method: :patch, class: "form-inline" do %>
          <%= text_field_tag :order_discount, @promotional.order_discount, class: "form-control" %>
          <%= submit_tag "變更額度", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%= form_tag admin_promotional_path(@promotional), method: :patch, class: "form-inline" do %>
          <%= select_tag :cart_discount, options_for_select(Promotional::DISCOUNT, @promotional.cart_discount), class: "form-control" %>
          <%= submit_tag "變更折扣", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%#= form_tag admin_promotional_path(@promotional), method: :patch, class: "form-inline" do %>
          <%#= text_field_tag :order_discount, @promotional.order_discount, class: "form-control" %>
          <%#= submit_tag "變更折扣", class: "btn btn-primary" %>
        <%# end %>
      </td>
    </tr>
  </tbody>
</table>
