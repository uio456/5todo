<h1>商品列表</h1>
<span class='pull-right'><%= "目前享有折扣金額：#{current_cart.cart_item_discount_price}" %></span>

<%#= link_to '新增商品', new_product_path, class: "btn btn-default btn-primary" %>
 <h3>
  <%= link_to cart_path do %>
    <%= current_cart.count_items %>
    <i "<span class= 'glyphicon glyphicon-shopping-cart'>Cart</span></i>
  <% end %>
</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>售價</td>
      <td>供應商</td>
      <td>商品狀態</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to '放到購物車', add_cart_path(product), method: "post", class: "btn btn-xs btn-danger" %>
        <%= product.title %>
      </td>
      <td><%= product.price %></td>
      <td>
        <%= product.vendor.name %>
      </td>
      <td>
        <%= I18n.t("promotion.#{product.state}") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>