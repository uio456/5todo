<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= render partial: 'shared/get_weather' %>
      <br>
    </div>
    <span>
      <%= @weather_info %>
      <!-- 做的 helper 顯示該顯示的資訊，下雨機率、啦曲時間、更新時間、描述 -->
    </span>
    <span class='pull-right'><%= cart_item_discount_price %></span>

     <h3>
      <%= link_to cart_path do %>
        <%= current_cart.count_items %>
        <i "<span class= 'glyphicon glyphicon-shopping-cart'>Cart</span></i>
      <% end %>
    </h3>

    <table class="table table-hover">
      <thead>
        <tr>
          <td>商品名稱</td>
          <td>售價</td>
          <th>標籤</th>
          <td>供應商</td>
          <td>商品狀態</td>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to '放到購物車', add_cart_path(product), method: "post", class: "btn btn-xs btn-danger" %>
            <%= product.title %>
          </td>
          <td><%= product.price %></td>
          <td><%= product.tag_list %></td>
          <td>
            <%= product.vendor.name %>
          </td>
          <td>
            <%= product_state(product) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>