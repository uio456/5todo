<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= link_to '台北市天氣列表', products_path(:city => "Taipei_City"), class: "btn btn-default btn-info" %>
      <%= link_to '新北市天氣列表', products_path(:city => "New_Taipei_City"), class: "btn btn-default btn-info" %>
      <%= link_to '台中市天氣列表', products_path(:city => "Taichung_City"), class: "btn btn-default btn-info" %>
      <%= link_to '高雄市天氣列表', products_path(:city => "Kaohsiung_City"), class: "btn btn-default btn-info" %>
      <br>
    </div>
  </div>
</div>
       <%=@weather_info %>



<span class='pull-right'><%= cart_item_discount_price %></span>

 <h3>
  <%= link_to cart_path do %>
    <%= current_cart.count_items %>
    <i "<span class= 'glyphicon glyphicon-shopping-cart'>Cart</span></i>
  <% end %>
</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>售價</td>
      <td>供應商</td>
      <td>商品狀態</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= link_to '放到購物車', add_cart_path(product), method: "post", class: "btn btn-xs btn-danger" %>
        <%= product.title %>
      </td>
      <td><%= product.price %></td>
      <td>
        <%= product.vendor.name %>
      </td>
      <td>
        <%= product_state(product) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>